<Window x:Class="Interface.EnterResource"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Interface"
        mc:Ignorable="d"
        Title="Enter Resource" Height="421" Width="502">
    <Grid Margin="0,0,-8,92">
        <Label x:Name="NameLabel" Content="Name" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="24,20,0,0"/>
        <Label x:Name="EmailLabel" Content="Email" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="24,73,0,0"/>
        <Label x:Name="PasswordLabel" Content="Password" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="24,128,0,0" RenderTransformOrigin="0.5,4.615"/>
        <TextBox x:Name="NameInput" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="222" Margin="121,24,0,0"/>
        <TextBox x:Name="EmailInput" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="222" Margin="121,73,0,0"/>
        <Button x:Name="AddButton" Content="Add" HorizontalAlignment="Left" Margin="121,205,0,0" VerticalAlignment="Top" Width="75" Click="AddButton_Click"/>
        <Button x:Name="CancelButton" Content="Clear" HorizontalAlignment="Left" Margin="229,205,0,0" VerticalAlignment="Top" Width="75"/>
        <PasswordBox x:Name="PasswordInput" HorizontalAlignment="Left" Margin="121,128,0,0" VerticalAlignment="Top" Width="222" Height="26"/>
    </Grid>
</Window>
